FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0.003";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    INLET
    {
        type            turbulentInlet;
        fluctuationScale (0.001 0.001 0.001);
        referenceField  uniform (2.1 0 0);
        alpha           0.1;
        value           uniform (2.1 0 0);
    }
    OUTLET
    {
        type            zeroGradient;
    }
    CYLINDER
    {
        type            noSlip;
    }
    FRONT_CYC
    {
        type            cyclic;
    }
    BACK_CYC
    {
        type            cyclic;
    }
}


